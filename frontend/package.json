{
  "name": "online-store-frontend",
  "version": "1.0.0",
  "private": true,
  "description": "Frontend for the Advanced React and GraphQL learning project",
  "main": "index.js",
  "scripts": {
    "dev": "next -p 7777",
    "build": "next build",
    "start": "next start",
    "test": "NODE_ENV=test jest --watch",
    "test-win": "SET NODE_ENV=test&& jest --watch",
    "heroku-postbuild": "next build"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "apollo-boost": "^0.1.28",
    "apollo-client": "^2.5.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-plugin-styled-components": "^1.10.0",
    "date-fns": "^2.0.0-alpha.27",
    "downshift": "^2.2.3",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.0",
    "graphql": "^14.1.1",
    "graphql-tag": "^2.10.1",
    "lodash.debounce": "^4.0.8",
    "next": "^9.3.4",
    "next-with-apollo": "^3.4.0",
    "nprogress": "^0.2.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.4",
    "react-adopt": "^0.6.0",
    "react-apollo": "^2.5.2",
    "react-dom": "^16.8.4",
    "react-stripe-checkout": "^2.6.3",
    "react-transition-group": "^2.6.0",
    "styled-components": "^3.4.10",
    "waait": "^1.0.4"
  },
  "devDependencies": {
    "babel-jest": "^25.0.0",
    "babel-plugin-module-resolver": "^3.2.0",
    "casual": "^1.6.0",
    "enzyme-to-json": "^3.3.5",
    "graphql-tools": "^4.0.4",
    "husky": "^1.3.1",
    "jest": "^24.9.0",
    "jest-transform-graphql": "^2.1.0",
    "lint-staged": "^13.1.0",
    "prettier": "^1.16.4"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/jest.setup.js",
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/"
    ],
    "transform": {
      "\\.(gql|graphql)$": "jest-transform-graphql",
      ".*": "babel-jest",
      "^.+\\.js?$": "babel-jest"
    },
    "clearMocks": true
  },
  "//": "This is our babel config, I prefer this over a .babelrc file",
  "babel": {
    "env": {
      "development": {
        "presets": [
          "next/babel"
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      },
      "production": {
        "presets": [
          "next/babel"
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      },
      "test": {
        "presets": [
          [
            "next/babel",
            {
              "preset-env": {
                "modules": "commonjs"
              }
            }
          ]
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --write",
      "git add"
    ]
  }
}
